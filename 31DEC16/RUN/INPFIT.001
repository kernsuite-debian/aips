PROCEDURE INPFIT (I)
   GMAX = 0
   GPOS = 0
   GWIDTH = 0
   CTYPE = 0
   DOMAX = 1
   DOPOS = 1
   DOWIDTH = 1
   TYPE 'SET WINDOW FOR FITTING AREA.'
   TVWIN
   NGAUSS = I
   FOR J = 1 TO I
      TYPE 'PLACE ON MAXIMUM OF',J,'TH COMPONENT'
      IMXY;IMVAL
      GMAX(J) = PIXVAL
      GPOS(1,J) = PIXXY(1)
      GPOS(2,J) = PIXXY(2)
      END
   RETURN
   FINISH
