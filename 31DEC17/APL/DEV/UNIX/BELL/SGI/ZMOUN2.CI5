/*--------------------------------------------------------------------*/
/*--------------------------------------------------------------------*/
/*  Issue a software tape mount or dismount requests.                 */
/*  Inputs:                                                           */
/*     mount    I      Operation indicator code:                      */
/*                        1 => mount                                  */
/*                        0 => dismount                               */
/*     idrive   I      Drive number                                   */
/*     idens    I      Density                                        */
/*     ntaped   I      Number of tape drives                          */
/*     npops    I      Pops number                                    */
/*     nuser    I      User AIPS number                               */
/*  Output:                                                           */
/*     msg      C*80   Error or mount type message buffer             */
/*     syserr   I      System error code: 0 => no error               */
/*     ierr     I      Error return code: 0 => no error               */
/*                        1 => error                                  */
/*                        2 => device doesn't exist                   */
/*                        3 => i/o error to device                    */
/*                        4 => device already allocated               */
/*                        6 => other device open errors               */
/*  SGI version: assumes the device name is of the form               */
/*     /dev/rmt/#dnb    where # is the device number, d is the        */
/*  density code (lmh), n means no rewind on close, and b means use   */
/*  Berkeley style rules.  The density is reset as needed for non-DAT */
/*  devices                                                           */
/*--------------------------------------------------------------------*/
{
   static int fd;
   int    jerr, llen, xlen, xlnb, tfd, density, ir;
   struct mtop top;
   struct mtget stat;
   struct mt_capablity capa;
   char   command[40], da00[5], lockfile[MAXAPATH+7], tape[7],
          xlated[MAXAPATH], densities[4];
   struct flock lock;
/*--------------------------------------------------------------------*/
   *ierr = 0;
   *syserr = 0;
   errno = 0;
   sprintf (msg, "   ");
   sprintf (tape, "TAPE%x", *idrive);
   densities[0] = 'l';
   densities[1] = 'm';
   densities[2] = 'h';
   densities[3] = 'h';
                                        /* Form the lock file name    */
   llen = 5;
   xlen = MAXAPATH;
   sprintf (da00, "DA00");
   ztrlo2_ (&llen, da00, &xlen, xlated, &xlnb, &jerr);
   if (jerr != 0) {
      sprintf (msg, "ZMOUN2: Couldn't translate logical %s", da00);
      *ierr = 1;
      goto exit;
      }
   xlated[xlnb] = '\0';
   sprintf (lockfile, "%s/%s.lock", xlated, tape);
                                        /* Translate logical TAPEn    */
   sprintf (tape, "AMT0%x", *idrive);
   llen = 5;
   xlen = MAXAPATH;
   ztrlo2_ (&llen, tape, &xlen, xlated, &xlnb, &jerr);
   if (jerr != 0) {
      sprintf (msg, "ZMOUN2: Couldn't translate logical %s", tape);
      *ierr = 1;
      goto exit;
      }
   xlated[xlnb] = '\0';
                                        /* MOUNT                      */
   if (*mount == 1) {
                                        /* Create/open the lock file  */
      if ((fd = open (lockfile, O_RDWR | O_CREAT, 0666)) == -1) {
         sprintf (msg, "ZMOUN2: Couldn't open lock file %s", lockfile);
         *syserr = errno;
         *ierr = 1;
         goto exit;
         }
#if MT_Debug                              /* NOTE - debug            */
      printf ("MOUN2: opened lock file %s\n", lockfile);
#endif
                                        /* Try to put a lock on it    */
                                        /* Apply non-blocking lock.   */
      lock.l_whence = SEEK_SET;
      lock.l_start = 0;
      lock.l_len = 0;
                                        /* Exclusive lock.            */
      lock.l_type = F_WRLCK;
      if ((ir = fcntl (fd, F_SETLK, &lock)) == -1) {
#if MT_Debug                              /* NOTE - debug            */
         printf ("MOUN2: POSIX fcntl -1 errno = %d\n", errno);
#endif
         if ((errno == EACCES) || (errno == EAGAIN)) {
            sprintf (msg,
               "(POSIX lock) Tape %d is currently in use.", *idrive);
            *ierr = 4;
            }
         else {                       /* Some other error           */
            sprintf (msg, "POSIX lockfile error %d", errno);
            *ierr = 1;
            *syserr = errno;
            }
         goto cleanup;
         }
#if MT_Debug                              /* NOTE - debug            */
      else {
         printf ("MOUN2: POSIX fcntl return = %d errno = %d\n",
            ir, errno);
         }
#endif
                                        /* open root device name      */
      if ((strncmp(xlated, "on-line", 7) == 0) ||
         (strncmp(xlated, "ON-LINE", 7)) == 0) {
         sprintf (msg, "Mounted on-line tape device");
         }
      else {
         tfd = open (xlated, O_RDONLY | O_NONBLOCK) ;
         if (tfd == -1) {
                                        /* Device doesn't exist.      */
            if (errno == ENOENT)
               *ierr = 2;
                                        /* Some other open error.     */
            else
               *ierr = 6;
            *syserr = errno;
            sprintf (msg, "ZMOUN2: Couldn't open tape device %s",
               xlated);
            goto cleanup;
            }
         top.mt_count = 1;
         top.mt_op = MTNOP;
         if (ioctl(tfd,MTIOCTOP,&top) != 0) {
            *ierr = 3;
            sprintf(msg,
               "ZMOUN2: error performing null op on tape drive");
            goto cleanup;
            }
         if (ioctl(tfd,MTIOCGET,&stat) != 0) {
            *ierr = 3;
            sprintf(msg, "ZMOUN2: error getting drive status");
            goto cleanup;
            }
         if (ioctl(tfd,MTCAPABILITY,&capa) != 0) {
            *ierr = 3;
            sprintf(msg, "ZMOUN2: error getting drive capabilities");
            goto cleanup;
            }
         close (tfd) ;
#if MT_Debug                              /* NOTE - debug            */
         printf ("ZMOUN2: mt_dposn %x mt_dsreg %x mt_erreg %x\n",
            stat.mt_dposn, stat.mt_dsreg, stat.mt_erreg);
         printf ("ZMOUN2: mt_type %x mtsubtype %x mtcapablity %x\n",
            stat.mt_type, capa.mtsubtype, capa.mtcapablity);
#endif
         density = 0;
         if (*idens == 800) density = 1;
         if (*idens == 1600) density = 2;
         if (*idens == 6250) density = 3;
         if (*idens == 22500) density = 4;
                                        /* rename AMT0n on type/dens  */
         sprintf (msg, "Mounted tape device type %x, subtype %x",
                  stat.mt_type, capa.mtsubtype);
         if (stat.mt_type == MT_ISQIC) {
            sprintf (msg,"ZMOUN2: AIPS does not use QIC tapes");
            *ierr = 2;
            goto cleanup;
            }
         else if (stat.mt_type == MT_ISXM) {
            density = min (density, 3);
            sprintf (msg, "Mounted on Xylogics 9-track tape drive");
            }
         else if ((stat.mt_type == MT_ISSCSI) ||
            (stat.mt_type == MT_ISVSCSI)) {
            if (capa.mtsubtype == TPDAT) {
               density = 0;
               sprintf (msg, "Mounted on DAT tape drive");
               }
            else if (capa.mtsubtype == TP9TRACK) {
               density = 0;
               sprintf (msg, "Mounted on 9-track tape drive");
               }
            else if (capa.mtsubtype == TP8MM_8200) {
               density = 0;
               sprintf (msg, "Mounted on Exabyte 8200 tape drive");
               }
            else if (capa.mtsubtype == TP8MM_8500) {
               density = density / 3;
               if (density)
                  sprintf (msg, "MOUNTED Exabyte 8500 at HIGH DENSITY");
               else
                  sprintf (msg, "Mounted Exabyte 8500 at low density");
               }
            else if ((capa.mtsubtype == TPQIC24) ||
               (capa.mtsubtype == TPQIC150) ||
               (capa.mtsubtype == TPQIC1000) ||
               (capa.mtsubtype == TPQIC1350)) {
               sprintf (msg,"ZMOUN2: AIPS does not use QIC tapes");
               *ierr = 2;
               goto cleanup;
               }
            }
                                        /* reset logical              */
         if (density) {
            xlated[xlnb-2] = densities[density-1];
            zcrlog_(&llen, tape, &xlnb, xlated, &jerr);
            if (jerr != 0) {
               sprintf (msg,
                  "ZMOUN2: Couldn't create logical %s", xlated);
               *ierr = 1;
               goto cleanup;
               }
            }
         }
      }
                                        /* DISMOUNT                   */
   else {
                                        /* Take the tape offline      */
      if ((strncmp(xlated, "on-line", 7) != 0) &&
         (strncmp(xlated, "ON-LINE", 7)) != 0) {
         tfd = open (xlated, O_RDONLY | O_NONBLOCK) ;
         if (tfd == -1) {
                                        /* Device doesn't exist.      */
            if (errno == ENOENT)
               *ierr = 2;
                                        /* Some other open error.     */
            else
               *ierr = 6;
            *syserr = errno;
            sprintf (msg, "ZMOUN2: Couldn't open tape device %s",
               xlated);
            goto cleanup;
            }
         top.mt_count = 1;
         top.mt_op = MTOFFL;
         if (ioctl(tfd,MTIOCTOP,&top) != 0) {
            *ierr = 3;
            sprintf(msg,
               "ZMOUN2: error performing Offline op on tape drive");
            goto cleanup;
            }
         close (tfd) ;
         }
cleanup:
                                        /* Release the lock file      */
      unlink (lockfile);
      close (fd);
      }

exit:
   return;
}
